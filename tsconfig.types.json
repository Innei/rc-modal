{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./types",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": false,
    "isolatedModules": false,
    "allowJs": false,
    "emitDeclarationOnly": true,
    "types": [],
  },
  "exclude": [
    "esm/*",
    "build/*",
    "node_modules/*",
    "lib/*",
    "example/*",
    "vitest.config.ts",
    "vite.config.ts",
    "src/__tests__/*"
  ]
}