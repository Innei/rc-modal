{
  "name": "rc-modal-sheet",
  "version": "0.2.4",
  "description": "Beautifully designed Modal Component built with Radix UI and Tailwind CSS.",
  "author": "Innei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Innei/rc-modal"
  },
  "files": [
    "dist",
    "readme.md",
    "tsconfig.json",
    "src",
    "styles.d.ts"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./index.css": {
      "require": {
        "type": "./styles.d.ts",
        "default": "./dist/index.css"
      },
      "import": {
        "type": "./styles.d.ts",
        "default": "./dist/index.css"
      }
    },
    "./motion": {
      "require": "./dist/helpers/motion.js",
      "import": "./dist/helpers/motion.mjs"
    },
    "./m": {
      "require": "./dist/helpers/m.js",
      "import": "./dist/helpers/m.mjs"
    },
    "./mobile-detector": {
      "require": "./dist/helpers/mobile-detector.js",
      "import": "./dist/helpers/mobile-detector.mjs"
    },
    "./dist/*": {
      "require": "./dist/*",
      "import": "./dist/*"
    },
    "./*": [
      "./*",
      "./*.d.ts"
    ]
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/helpers/*",
        "./*"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache"
    ]
  },
  "bump": {
    "before": [
      "npm run build"
    ],
    "publish": true,
    "changelog": true
  },
  "scripts": {
    "prebuild": "rm -rf lib && rm -rf esm",
    "build": "vite build && tailwindcss -i src/tw.css -o dist/index.css",
    "prepare": "husky install",
    "release": "bump",
    "dev": "vite build --watch"
  },
  "devDependencies": {
    "@innei/bump-version": "1.5.10",
    "@innei/eslint-config-react-ts": "0.13.2",
    "@innei/eslint-config-ts": "0.13.2",
    "@innei/prettier": "0.13.2",
    "@radix-ui/react-dialog": "1.0.5",
    "@types/node": "20.14.8",
    "@types/react": "18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "4.3.1",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "0.21.5",
    "framer-motion": "11.0.13",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "postcss": "8.4.38",
    "postcss-import": "16.1.0",
    "postcss-nested": "6.0.1",
    "prettier": "3.3.2",
    "react": "18.3.1",
    "react-dom": "^18.3.1",
    "rollup-plugin-preserve-directives": "0.4.0",
    "tailwindcss": "3.4.4",
    "tsc-alias": "1.8.10",
    "tslib": "2.6.3",
    "typescript": "5.5.2",
    "vite": "5.3.1",
    "vite-plugin-dts": "3.9.1",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0"
  },
  "peerDependencies": {
    "@radix-ui/react-dialog": "^1",
    "clsx": "*",
    "framer-motion": "^11",
    "tailwind-merge": "^2",
    "vaul": "^0.9.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.11",
    "tailwind-merge": "^2.3.0",
    "vaul": "^0.9.1"
  }
}