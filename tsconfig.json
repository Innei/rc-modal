{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "/tmp",
    "jsx": "react",
    "target": "ES2020",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "esm/*",
    "build/*",
    "node_modules/*",
    "lib/*",
    "example/*",
    "tailwind.config.ts",
    "demo/*"
  ]
}